<settings>
	<setting name="@mysql.production_server" value="0" /> <!-- 1 = Live server 0 = Local/Dev server -->

	<!-- MySQL -->
	<setting name="@mysql.socket" value="unix_socket=/var/run/mysqld/mysqld.sock" />
	<!-- MTA DB -->
	<setting name="@mysql.database" value="mta" />
	<setting name="@mysql.username" value="root" />
	<setting name="@mysql.password" value="" />
	<setting name="@mysql.hostname" value="localhost" />
	<setting name="@mysql.port" value="3306" />
	<!-- Core DB -->
	<setting name="@mysql.core_database" value="core" />
	<setting name="@mysql.core_username" value="root" />
	<setting name="@mysql.core_password" value="" />
	<setting name="@mysql.core_hostname" value="localhost" />
	<setting name="@mysql.core_port" value="3306" />

	<!-- UCP Access -->
	<setting name="@usercontrolpanel.website_pass" value="WEBSITE_PASSWORD" />

	<!-- Forums API Key -->
	<setting name="@integration.forumsAPIKey" value="FORUMS_API_KEY" />
	<!-- Imgur Client ID used to get dimensions of skins and item-texture stuff -->
	<setting name="imgurClient" value="IMGUR_API_KEY" />

	<!-- Scanner -->
	<setting name="@payday.inactivityscanner_vehicles" value="1" />
	<setting name="@payday.inactivityscanner_interiors" value="1" />
	<setting name="@item-world.inactivityscanner_items" value="2" />
	<!--
		Inactivity scanner modes: 0: disabled, 1: enabled
		item deletion modes: 0: off, 1: delete all items after 30 days, 2: delete only exterior items after 30 days
		Notes (72) are deleted after 3 days.
		Storage items 81 (fridge), 103 (fridge), 223 (storage generic) and 231 (shipping container) are excempt from deletion
		Other excempt items: 169 (keyless digital door lock)
	-->
</settings>
